#!/usr/bin/env ruby

require 'aws-sdk'
require 'yaml'
require_relative '../lib/config.rb'

config = CloudSurveyor::Config.new

sqs = if config.endpoint
        Aws::SQS::Client.new endpoint: config.endpoint
      else
        Aws::SQS::Client.new
      end

config.queues.each do |name|
  sqs.create_queue queue_name: name
end
